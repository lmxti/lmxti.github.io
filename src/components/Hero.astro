  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <a href="#proyectos" class="text-gray-400 hover:text-blue-500 transition-colors text-center">
      <!-- Flecha hacia abajo con bounce -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
